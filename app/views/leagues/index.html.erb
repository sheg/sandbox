<div>
<table class="table table-bordered table-condensed">
  <thead>
  <tr>
    <th>Team</th>
    <th>Wins</th>
    <th>Losses</th>
  </tr>
  </thead>
  <tbody>
  <% @data.each_with_index do |team, index| %>
  <% if index == 0 %>
  <tr>
    <td><%= link_to(team['Name'], buffalo_path) %></td>
    <td><%= team['Wins'] %></td>
    <td><%= team['Losses'] %> </td>
  </tr>
  <% next %>
  <% else %>
  <% end %>
  <tr>
    <td><%= team['Name'] %></td>
    <td><%= team['Wins'] %></td>
    <td><%= team['Losses'] %> </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>